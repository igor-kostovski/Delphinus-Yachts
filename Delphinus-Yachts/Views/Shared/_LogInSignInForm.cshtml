@model Delphinus_Yachts.DTOs.LoginDTO
@{
    Layout = null;
    var actionName = ViewData["actionName"].ToString();
    var buttonText = actionName == "Login" ? "Login" : "Sign in";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@buttonText</title>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            background-color: #eeeeee;
        }

        .form {
            background-color: #4e73df;
            background-image: linear-gradient(315deg,#4e73df 10%,#212529 100%);
            width: 500px;
            margin: 100px auto 10px auto;
            padding: 30px;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 10px -3px #333;
            text-align: center;
        }

        input:not([type=checkbox]) {
            border-radius: 100px;
            padding: 10px 15px;
            width: 50%;
            border: 1px solid #D9D9D9;
            outline: none;
            display: block;
            margin: 20px auto 20px auto;
        }

        button {
            border-radius: 100px;
            border: none;
            background: #719BE6;
            width: 50%;
            padding: 10px;
            color: #FFFFFF;
            margin-top: 25px;
            box-shadow: 0 2px 10px -3px #719BE6;
            display: block;
            margin: 55px auto 10px auto;
            outline: none;
            cursor: pointer;
        }

        img {
            display: block;
            width: 200px;
            border-radius: 40%;
        }

        .heading {
            display: inline-block;
        }
    </style>
</head>
<body>
    <div class="form">
        <div class="heading">
            <img src="@Url.Content("/Content/Images/Logo.png")" />
        </div>
        @using (Html.BeginForm(actionName, "Account"))
        {
            <div class="form-group">
                @Html.TextBoxFor(x => x.Email, new { placeholder = "Email" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.Password, new { placeholder = "Password", type = "password" })
            </div>
            <div>
                @Html.CheckBoxFor(x => x.RememberMe)
                <label style="color: grey">Remember me</label>
            </div>
            @Html.AntiForgeryToken()
            <button class="btn btn-primary" type="submit">@buttonText</button>
            @Html.ValidationMessage("CustomError", new { style = "color: red"})
        }
    </div>
</body>
</html>
