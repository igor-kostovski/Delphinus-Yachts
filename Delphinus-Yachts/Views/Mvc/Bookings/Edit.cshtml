
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="edit">
    <div class="d-sm-flex align-items-center mb-4">
        <h1 class="h2 mb-0 text-gray-800">Booking</h1>
        <div style="margin-left: 5px">
            <button class="btn btn-info btn-sm">Back to list</button>
            <button class="btn btn-primary btn-sm">Save</button>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-4 col-lg-4 col-sm-4">
            <div class="card mb-4">
                <div class="card-header theme-background">
                    Basic info
                </div>
                <div class="card-body">
                    <div class="row indent-left-sm">
                        <div class="form-group col-lg-4">
                            <label>Start date</label>
                        </div>
                        <div class="form-group col-lg-3">
                            <input class="text-input" type="text" />
                        </div>
                    </div>
                    <div class="row indent-left-sm">
                        <div class="form-group col-lg-4">
                            <label>End date</label>
                        </div>
                        <div class="form-group col-lg-3">
                            <input class="text-input" type="text" />
                        </div>
                    </div>
                    <div class="row indent-left-sm">
                        <div class="form-group col-lg-4">
                            <label>Start location</label>
                        </div>
                        <div class="form-group col-lg-3">
                            <input class="text-input" type="text" />
                        </div>
                    </div>
                    <div class="row indent-left-sm">
                        <div class="form-group col-lg-4">
                            <label>End location</label>
                        </div>
                        <div class="form-group col-lg-3">
                            <input class="text-input" type="text" />
                        </div>
                    </div>
                    <div class="row indent-left-sm">
                        <div class="form-group col-lg-4">
                            <label>Number of people</label>
                        </div>
                        <div class="form-group col-lg-3">
                            <input class="text-input" type="number" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-4 col-sm-4">
            <div class="card mb-4">
                <div class="card-header theme-background">
                    Pricing info
                </div>
                <div class="card-body">
                    <div class="row indent-left">
                        <div class="form-group col-lg-3">
                            <label>Price</label>
                        </div>
                        <div class="form-group col-lg-3">
                            <input class="text-input" type="number" />
                        </div>
                    </div>
                    <div class="row indent-left">
                        <div class="form-group col-lg-3">
                            <label>Booking status</label>
                        </div>
                        <div class="form-group col-lg-3">
                            <input class="text-input" type="number" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-header theme-background">
                    Route info
                </div>
                <div class="card-body">
                    <div class="row indent-left-sm">
                        <div class="form-group col-lg-4">
                            <label>Route name</label>
                        </div>
                        <div class="form-group col-lg-3">
                            <input class="text-input" type="number" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-4 col-sm-4">
            <div class="card mb-4">
                <div class="card-header theme-background">
                    Contract info
                </div>
                <div class="card-body">
                    <div class="row indent-left-sm">
                        <div class="form-group col-lg-4">
                            <label>Contract type</label>
                        </div>
                        <div class="form-group col-lg-3">
                            <input class="text-input" type="number" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

