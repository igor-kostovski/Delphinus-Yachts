@model Delphinus_Yachts.DTOs.LoginDTO
@{
    Layout = null;
    ViewData["actionName"] = "Login";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Log in</title>
</head>
<style>
    body {
        height: 100%;
        margin: 0;
        padding: 0;
    }
    .wrapper {
        position: relative;
    }
    .content {
        position:fixed;
        padding:0;
        margin:0;
        top:0;
        left:0;
        width: 100%;
        height: 100%;
        background-color: #4e73df;
        background-image: linear-gradient(45deg,#212529 10%,#224abe 100%);
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }
</style>
<body>
@Html.Partial("_LogInSignInForm", Model)
<div class="wrapper">
    <div class="content">
        @Html.Partial("_LogInSignInForm")
    </div>
</div>
</body>
</html>


